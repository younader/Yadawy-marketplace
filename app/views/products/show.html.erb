<p id="notice alert alert-info" ><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @product.seller %>
</p>

<p>
  <strong>Specs:</strong>
  <%= @product.specs %>
</p>

<p>
  <strong>Image:</strong>
  <%if @product.image? %>
  <%= image_tag @product.image.url(:thumb) if @product.image? %>
<% else %>
  <%= image_tag 'No_Image_Available.jpg', size:"204x204" %>
  <%end %>
</p>
<%= render "products/recommended"%>
<%= render "comments/comments" %>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', product_path %>
